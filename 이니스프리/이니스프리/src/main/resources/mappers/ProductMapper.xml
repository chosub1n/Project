<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.project.innisfree.dao.ProductDAO">
	 <insert id="insertCategory">
      	insert into category(lc_code, mc_code, lc_name, mc_name) 
         values(#{lc_code}, #{mc_code}, #{lc_name}, #{mc_name})
     </insert>
	 <select id="selectCategoryList" resultType="kr.project.innisfree.vo.CategoryVO">
      	select * from large_category
			join midium_category on lc_code = mc_lc_code
		    join small_category on sc_mc_code = mc_code
     </select> 
     <select id="selectLargeCategory" resultType="kr.project.innisfree.vo.CategoryVO">
     	select *  from large_category
     </select>
     <select id="selectMidiumCategory" resultType="kr.project.innisfree.vo.CategoryVO">
     	select *  from midium_category where mc_lc_code = #{code}
     </select>
     <select id="selectSmallCategory" resultType="kr.project.innisfree.vo.CategoryVO">
     	select *  from small_category where sc_mc_code = #{code}
     </select>
     <insert id="insertMidiumCategory">
     	insert into category(mc_code, mc_name) values(#{mc_code}, #{mc_name})
     </insert>
     <insert id="insertLargeCategory">
     	insert into category(lc_code, lc_name) values(#{lc_code}, #{lc_name})
     </insert>
</mapper>